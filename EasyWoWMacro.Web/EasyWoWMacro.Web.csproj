<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <OverrideHtmlAssetPlaceholders>true</OverrideHtmlAssetPlaceholders>
    <!-- GitHub Pages configuration -->
    <StaticWebAssetBasePath>/EasyWoWMacro/</StaticWebAssetBasePath>
    <BlazorWebAssemblyEnableLinking>false</BlazorWebAssemblyEnableLinking>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="10.0.0-preview.4.25258.110" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="10.0.0-preview.4.25258.110" PrivateAssets="all" />
    <PackageReference Include="PublishSPAforGitHubPages.Build" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EasyWoWMacro.Core\EasyWoWMacro.Core.csproj" />
  </ItemGroup>

  <!-- GitHub Pages specific configuration -->
  <PropertyGroup Condition="'$(GHPages)' == 'true'">
    <StaticWebAssetBasePath>/EasyWoWMacro/</StaticWebAssetBasePath>
    <BlazorWebAssemblyEnableLinking>false</BlazorWebAssemblyEnableLinking>
  </PropertyGroup>

</Project>
