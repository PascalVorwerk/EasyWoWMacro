@rendermode InteractiveServer
@using EasyWoWMacro.Core.Models

<div class="modal @(IsVisible ? "show" : "")" tabindex="-1" style="display: @(IsVisible ? "block" : "none")">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Configure Command</h5>
                <button type="button" class="btn-close" @onclick="OnClose"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Search Commands</label>
                    <input type="text" class="form-control" @bind="searchTerm" @oninput="HandleSearchInput" placeholder="Type to search..." />
                </div>
                <div class="mb-3">
                    <label class="form-label">Command</label>
                    <select class="form-select" @bind="selectedCommand" size="10">
                        <option value="">Select a command...</option>
                        @foreach (var command in filteredCommands)
                        {
                            <option value="@command">@command</option>
                        }
                    </select>
                    <div class="form-text">@filteredCommands.Count() commands found</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="OnClose">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="HandleSave">Save</button>
            </div>
        </div>
    </div>
</div>

@if (IsVisible)
{
    <div class="modal-backdrop show"></div>
}
