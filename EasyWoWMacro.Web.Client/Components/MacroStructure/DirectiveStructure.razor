            <div class="item-main">
                <span class="directive-name">@Directive.Directive</span>
                @if (!string.IsNullOrEmpty(Directive.Argument))
                {
                    <span class="directive-arrow">â†’</span>
                    <span class="directive-argument">@Directive.Argument</span>
