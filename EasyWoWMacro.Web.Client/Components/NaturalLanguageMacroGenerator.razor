@rendermode InteractiveWebAssembly

@if (RendererInfo.IsInteractive)
{
    <div class="natural-language-generator">
    <div class="wow-toolbox-header">
        <h4 class="wow-toolbox-subtitle">
            <span class="wow-toolbox-icon">ü§ñ</span>
            AI Macro Generator
        </h4>
    </div>
    
    <div class="input-section">
        <div class="form-group mb-3">
            <label for="naturalLanguageInput" class="form-label">Describe your macro in plain English:</label>
            <textarea id="naturalLanguageInput"
                      class="form-control @(_hasError ? "is-invalid" : "")"
                      rows="3"
                      placeholder="e.g., Cast fireball at my target if hostile, otherwise heal if friendly"
                      @bind="_description"
                      @bind:event="oninput"
                      disabled="@_isGenerating"
                      maxlength="500"></textarea>
            @if (_hasError)
            {
                <div class="invalid-feedback">
                    @_errorMessage
                </div>
            }
            <small class="form-text text-muted">@(_description?.Length ?? 0)/500 characters</small>
        </div>
        
        <div class="generation-controls">
            <button class="btn btn-primary @(_isGenerating ? "loading" : "")" 
                    @onclick="GenerateMacro" 
                    disabled="@(string.IsNullOrWhiteSpace(_description) || _isGenerating)">
                @if (_isGenerating)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Generating...</span>
                }
                else
                {
                    <span>üöÄ Generate Macro</span>
                }
            </button>
            
            @if (_lastResult != null && _lastResult.Success)
            {
                <button class="btn btn-outline-success ms-2" 
                        @onclick="UseGeneratedMacro"
                        disabled="@_isGenerating">
                    ‚úÖ Use This Macro
                </button>
            }
        </div>
    </div>

    @if (_lastResult != null)
    {
        <div class="generation-result mt-3">
            @if (_lastResult.Success)
            {
                <div class="alert alert-success">
                    <div class="result-header">
                        <h6>‚ú® Generated Macro:</h6>
                        <small class="text-muted">
                            @(_lastResult.CharacterCount) chars ‚Ä¢ @(_lastResult.TokensUsed) tokens ‚Ä¢ @($"{_lastResult.ProcessingTime.TotalSeconds:F1}")s
                        </small>
                    </div>
                    <div class="generated-macro">
                        <code class="wow-macro-code">@_lastResult.GeneratedMacro</code>
                        <button class="btn btn-sm btn-outline-secondary ms-2" 
                                @onclick="() => CopyToClipboard(_lastResult.GeneratedMacro!)"
                                title="Copy to clipboard">
                            üìã
                        </button>
                    </div>
                    @if (!string.IsNullOrEmpty(_lastResult.Explanation))
                    {
                        <div class="explanation mt-2">
                            <small class="text-muted">
                                <strong>Explanation:</strong> @_lastResult.Explanation
                            </small>
                        </div>
                    }
                    @if (_lastResult.Suggestions.Any())
                    {
                        <div class="suggestions mt-2">
                            <small class="text-info">
                                <strong>Suggestions:</strong>
                                <ul class="mb-0">
                                    @foreach (var suggestion in _lastResult.Suggestions)
                                    {
                                        <li>@suggestion</li>
                                    }
                                </ul>
                            </small>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <h6>‚ùå Generation Failed:</h6>
                    @if (_lastResult.Errors.Any())
                    {
                        <ul class="mb-0">
                            @foreach (var error in _lastResult.Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    }
                    @if (_lastResult.Warnings.Any())
                    {
                        <div class="mt-2">
                            <strong>Warnings:</strong>
                            <ul class="mb-0">
                                @foreach (var warning in _lastResult.Warnings)
                                {
                                    <li class="text-warning">@warning</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            }
        </div>
    }

    @if (_showCopyToast)
    {
        <div class="copy-toast">
            <div class="copy-toast-content">
                <span>‚úì Copied to clipboard!</span>
            </div>
        </div>
    }
</div>
}
else
{
    <div class="natural-language-generator loading-skeleton">
        <div class="wow-toolbox-header">
            <h4 class="wow-toolbox-subtitle">
                <span class="wow-toolbox-icon">ü§ñ</span>
                AI Macro Generator
            </h4>
            <p class="text-muted">Loading...</p>
        </div>
    </div>
}