@rendermode InteractiveWebAssembly

@if (RendererInfo.IsInteractive)
{
    <div class="wow-building-blocks-toolbox">
        <div class="wow-toolbox-header">
            <h3 class="wow-toolbox-title">
                <span class="wow-toolbox-icon">🔧</span>
                Spell Components
            </h3>
            <p class="wow-toolbox-subtitle">Drag components to forge your macro</p>
        </div>
        <div class="wow-blocks-container">
            <BuildingBlock BlockType="Directive">
                <div class="wow-block-content">
                    <span class="wow-block-icon">📜</span>
                    <div class="wow-block-text">
                        <span class="wow-block-name">Directive</span>
                        <small class="wow-block-desc">Show, ShowTooltip</small>
                    </div>
                </div>
            </BuildingBlock>

            <BuildingBlock BlockType="Command">
                <div class="wow-block-content">
                    <span class="wow-block-icon">⚔️</span>
                    <div class="wow-block-text">
                        <span class="wow-block-name">Command</span>
                        <small class="wow-block-desc">Cast, Use, Target</small>
                    </div>
                </div>
            </BuildingBlock>

            <BuildingBlock BlockType="Conditional">
                <div class="wow-block-content">
                    <span class="wow-block-icon">🔮</span>
                    <div class="wow-block-text">
                        <span class="wow-block-name">Conditions</span>
                        <small class="wow-block-desc">Combat, Exists, Help</small>
                    </div>
                </div>
            </BuildingBlock>

            <BuildingBlock BlockType="Argument">
                <div class="wow-block-content">
                    <span class="wow-block-icon">💎</span>
                    <div class="wow-block-text">
                        <span class="wow-block-name">Argument</span>
                        <small class="wow-block-desc">Spells, Items, Targets</small>
                    </div>
                </div>
            </BuildingBlock>
        </div>
    </div>
}
else
{
    <div class="wow-building-blocks-toolbox">
        <div class="wow-toolbox-header">
            <h3 class="wow-toolbox-title">
                <span class="wow-toolbox-icon">🔧</span>
                Spell Components
            </h3>
            <p class="wow-toolbox-subtitle">Loading magical components...</p>
        </div>
        <div class="wow-blocks-container">
            <div class="wow-skeleton-block"></div>
            <div class="wow-skeleton-block"></div>
            <div class="wow-skeleton-block"></div>
            <div class="wow-skeleton-block"></div>
        </div>
    </div>
}
